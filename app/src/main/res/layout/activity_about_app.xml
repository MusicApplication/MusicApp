<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_scrollview2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/about_holder2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_margin">

        <com.musicplayer.commons.views.MyTextView
            android:id="@+id/changelog_text_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="@dimen/activity_margin"
            android:paddingBottom="@dimen/activity_margin"
            android:text="@string/ChangelogAboutAppActivity" />

        <com.musicplayer.commons.views.MyTextView
            android:id="@+id/licenses_text_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/changelog_text_button"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="@dimen/activity_margin"
            android:paddingBottom="@dimen/activity_margin"
            android:text="@string/LicensesAboutAppActivity" />

        <com.musicplayer.commons.views.MyTextView
            android:id="@+id/sourcecode_text_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/licenses_text_button"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="@dimen/activity_margin"
            android:paddingBottom="@dimen/activity_margin"
            android:text="@string/SourceCodeAboutAppActivity" />

    </RelativeLayout>

</ScrollView>
